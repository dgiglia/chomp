%section.advanced_search.container
  .col-sm-12.col-sm-offset-1
    = form_tag advanced_search_businesses_path, class: 'form-horizontal', method: 'get' do
      %header
        %h1 Advanced Search
      .form-group
        .col-sm-6
          = search_field_tag :query, params[:query], placeholder: "Search eateries by name, city, or state", class: 'form-control'
      .form-group
        .col-sm-6
          = button_tag(type: "submit", class: "btn btn-primary") do
            %span.glyphicon.glyphicon-search
            Search
    %hr
    - if params[:query].present?
      %h2 Results: #{@businesses.count} eateries found
      - @businesses.each do |business|
        = render 'business', business: business