%section.container
  .row
    .col-sm-10
      .well
        %header
          %h1 Edit Review
        = bootstrap_form_for [:admin, @review] do |f|
          %fieldset
            = f.text_area :comment, rows: 6, label: "Comments"
          %fieldset.form-group.actions
            = f.submit "Submit", class: "btn btn-success"
            = link_to "Cancel", business_path(@review.business), class: "btn btn-default"