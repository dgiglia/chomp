%section.well.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.form-horizontal
        %header
          %h1 Register
        %fieldset
          .form-group
            %label.control-label.col-sm-2 Email Address
            .col-sm-6
              %input.form-control(type="email")
          .form-group
            %label.control-label.col-sm-2 Password
            .col-sm-6
              %input.form-control(type="password")
          .form-group
            %label.control-label.col-sm-2 Full Name
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 City
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 State
            .col-sm-6
              %input.form-control(type="text")
          .form-group
            %label.control-label.col-sm-2 Avatar
            .col-sm-10
              .col-sm-2
                %span.input-group-addon
                  %input(type="checkbox")
                  %img.img-responsive(src="/assets/face_icons/man6.png")
              .col-sm-2
                %span.input-group-addon
                  %input(type="checkbox")
                  %img.img-responsive(src="/assets/face_icons/man1.png")
              .col-sm-2
                %span.input-group-addon
                  %input(type="checkbox")
                  %img.img-responsive(src="/assets/face_icons/man5.png")
              .col-sm-2
                %span.input-group-addon
                  %input(type="checkbox")
                  %img.img-responsive(src="/assets/face_icons/woman9.png")
              .col-sm-2
                %span.input-group-addon
                  %input(type="checkbox")
                  %img.img-responsive(src="/assets/face_icons/woman7.png")
              .col-sm-2
                %span.input-group-addon
                  %input(type="checkbox")
                  %img.img-responsive(src="/assets/face_icons/woman8.png")
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Register" class="btn btn-default")

