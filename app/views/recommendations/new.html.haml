%section.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @recommendation, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f|
        %header
          %h2 Recommend #{@business.name}        
        %fieldset
          = hidden_field_tag :business_id, @business.id
          = f.text_field :recipient_name, label: "Friend's Name"
          = f.email_field :recipient_email, label: "Friend's Email Address"
          = f.text_area :message, label: "Recommendation Message", rows: 6, placeholder: "Check out this restaurant!"
        %fieldset.actions.control-group.col-sm-offset-2
          = f.submit "Send Recommendation", class: "btn btn-default"